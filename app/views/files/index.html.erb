<body>

  <%linux_ext = ['.deb', '.sh']%>

<div class="card-body">

<center>
<h1 style="font-family: 'Courier New', Courier, monospace;"> Webkorps Package List</h1>
</center>

  

<center>
<table>  

    <tr>
      <th>File Name </th>
      <th> Type </th>
      <th>Platform OS</th>
      <th>File Size </th>
      <th>Last Modified </th>
      <th>Actions </th>
    </tr>

  <% @files.each do |file_path| %>
       
    <tr>
      <td><%= File.basename(file_path) %></td>
      <td><%= File.file?(file_path) ? 'File' : 'Folder' %></td>
      <td><%=linux_ext.include?(File.extname(file_path)) ? 'Linux' : 'Windows'%> </td>
      <td><%=  file_size(file_path) %></td>
      <td><%= File.atime(file_path).strftime('%I:%M %p %d %B %Y') %></td>
       <td><%= link_to "Download", File.file?(file_path) ? download_path(file: file_path) : download_folder_path(folder_path: file_path), class:"download-link" %></td>
   
    </tr>

    <style>
    
    td,
    th {
        border: 0px solid;
        padding: 10px;
    }

    table {
        text-align: center;
    }
</style>
         
  <% end %>

  
 
</table>
</div>
</center>
</body>
</html>